<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Array</title>
<script type="text/javascript">
	var arr = [1,2,3,4,5];
	// splice(index) : index 기준으로 나눔
	// arr의 index 1부터 끝까지 삭제, 삭제된 요소들이 res에 저장
	var res = arr.splice(3);
	document.write("반환된 배열 : " + arr + "<br>");
	document.write("변경된 배열 : " + res + "<br>");
	document.write("<hr>");
	
	var arr2 = ["html","css","js","spring"];
	// splice(index, 개수) 
	// arr2의 index 2부터 1개 삭제, 삭제된 요소들이 res2에 저장
	var res2 = arr2.splice(2, 1);
	document.write("반환된 배열 : " + arr2 + "<br>");
	document.write("변경된 배열 : " + res2 + "<br>");
	document.write("<hr>");
	
	var arr3 = ["html","css","js","spring"];
	// splice(index, 개수, 새로 들어갈 요소) 
	// arr3의 index 2부터 1개 삭제, 삭제된 요소들이 res2에 저장
	var res3 = arr3.splice(2, 1, "jQuery, ajax");
	document.write("반환된 배열 : " + arr3 + "<br>");
	document.write("변경된 배열 : " + res3 + "<br>");
	document.write("<hr>");
</script>
</head>
<body>

</body>
</html>