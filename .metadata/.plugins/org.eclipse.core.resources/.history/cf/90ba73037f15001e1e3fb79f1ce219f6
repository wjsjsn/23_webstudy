<head>
<meta charset="UTF-8">
<title>이벤트 리스너</title>
<script type="text/javascript">
	function mybtn() {
		// 이벤트 리스너
		// addEventListener("", function(){내용})
		document.getElementById("mybtn").addEventListener("onclick", function() {
			document.getElementById("demo1").innerHTML = new Date().toLocaleString();
		});
	}
</script>
</head>
<body>
	<p id="demo1"></p>
	<p id="demo2"></p>
	<hr>
	
	<button id="mybtn()">클릭</button>
