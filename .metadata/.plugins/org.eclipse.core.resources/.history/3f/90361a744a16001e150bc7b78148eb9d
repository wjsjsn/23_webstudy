	<script type="text/javascript">
	var cnt = 0;
		var conver = document.getElementById("cover");
		conver.addEventListener("click", function(){			
		if (cnt++ % 2 == 0) {
				conver.src = "../images/cup-2.png"
			} else {
				conver.src = "../images/cup-1.png"
			}
		});
